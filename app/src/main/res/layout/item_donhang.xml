<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgSanPham"
        style="@style/CircularImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="Ảnh sản phẩm"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTenSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textSize="8pt"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/tvGiaSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá: 100.000 VND"
            android:textSize="8pt"
            android:textColor="#FF5722"
            android:layout_marginTop="4dp" />
        <TextView
            android:id="@+id/tvDonViTinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn vị: kg"
            android:textSize="8pt"
            android:textColor="#666666"
            android:layout_marginTop="2dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5pt"
            android:gravity="right"
            >
            <Button
                android:id="@+id/btnXacnhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xác nhận"
                android:textColor="@color/black"
                style="@style/CustomButtonStyle"
                android:layout_marginEnd="8pt"
                android:layout_gravity="center"
                android:textSize="5pt"/>
            <Button
                android:id="@+id/btnHuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:textColor="@color/black"
                style="@style/CustomButtonStyle"
                android:layout_gravity="center"
                android:textSize="5pt"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>